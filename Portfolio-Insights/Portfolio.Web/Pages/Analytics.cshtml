@page
@model AnalyticsModel
@{
    ViewData["Title"] = "Analytics";
}

<form id="af" method="post" style="display:none;">
    @Html.AntiForgeryToken()
</form>

<div class="container mt-4">

    <div class="row mb-3">
        <div class="col">
            <h2>Analytics Overview</h2>
            <p class="text-muted">
                Updated as of:
                <strong id="updatedAt">Loading...</strong>
            </p>
        </div>
    </div>

    <!-- Key Metrics -->
    <div class="card mb-4">
        <div class="card-body">
            <h5>Key Metrics</h5>
            <div class="row text-center mt-3">
                <div class="col-md-4">
                    <h6>Total Value</h6>
                    <p id="m_totalValue" class="fw-bold">Loading...</p>
                </div>
                <div class="col-md-4">
                    <h6>Daily Change</h6>
                    <p id="m_dailyChange" class="fw-bold">Loading...</p>
                </div>
                <div class="col-md-4">
                    <h6>Total Return</h6>
                    <p id="m_totalReturn" class="fw-bold">Loading...</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts -->
    <div class="row mb-4">
        <div class="col-lg-6 mb-4">
            <div class="card">
                <div class="card-body" style="height:320px; position:relative;">
                    <h5>Asset Allocation</h5>
                    <div style="height:260px;">
                        <canvas id="pieChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6 mb-4">
            <div class="card">
                <div class="card-body" style="height:320px; position:relative;">
                    <h5>Portfolio Value Over Time</h5>
                    <div style="height:260px;">
                        <canvas id="lineChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Asset Contribution Table -->
    <div class="card mb-4">
        <div class="card-body">
            <h5>Asset Contributions</h5>
            <table class="table table-striped mt-3">
                <thead>
                    <tr>
                        <th>Symbol</th>
                        <th class="text-end">Current Value</th>
                        <th class="text-end">Weight %</th>
                    </tr>
                </thead>
                <tbody id="contribTable">
                    <tr><td colspan="3" class="text-center text-muted">Loading...</td></tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Buttons -->
    <div class="d-flex justify-content-between mb-4">
        <button id="simulateBtn" class="btn btn-warning">⚙️ Simulate Market Update</button>
        <a asp-page="/Index" class="btn btn-link">Back to Dashboard</a>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const analyticsData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Analytics));
        const historyData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.History));
    </script>
    <script src="~/js/analytics.js"></script>
}